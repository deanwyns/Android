<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hogent.hogentprojecteniii_groep10" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_joetz_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VacationOverview"
            android:label="@string/title_activity_vacation_overview"
            android:parentActivityName=".Main" >
        </activity>
        <activity
            android:name=".SpecificVacationView"
            android:label="@string/title_activity_specific_vacation_view"
            android:parentActivityName=".VacationOverview" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hogent.hogentprojecteniii_groep10.VacationOverview" />
        </activity>
        <activity
            android:name=".VacationFilter"
            android:label="@string/title_activity_vacation_filter"
            android:parentActivityName=".VacationOverview" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hogent.hogentprojecteniii_groep10.VacationOverview" />
        </activity>
    </application>

</manifest>
