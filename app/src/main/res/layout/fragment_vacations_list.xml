<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hogent.hogentprojecteniii_groep10.VacationOverview">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vacation_overview_list_view"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sort_title_btn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="@string/vacation_title_sort_btn"
        android:id="@+id/sort_title_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="@string/vacation_date_sort_btn"
        android:id="@+id/sort_date_btn"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/sort_title_btn"
        android:layout_marginLeft="5dp" />

</RelativeLayout>