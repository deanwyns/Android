<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/joetz"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountgegevens"
                />

            <EditText
                android:id="@+id/telNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:hint="@string/telNr"/>

            <EditText
                android:id="@+id/registreer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="@string/email_hint"/>

            <EditText
                android:id="@+id/registreer_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="@string/password_hint"/>

            <EditText
                android:id="@+id/bevestig_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="string/registreer"
                android:inputType="textPassword"
                android:singleLine="true"
                android:hint="@string/bevestig_password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gegevens_moeder"
                />

            <EditText
                android:id="@+id/naam_moeder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:hint="@string/lastname"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/voornaam_moeder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:hint="@string/firstname"/>

            <EditText
                android:id="@+id/rrn_moeder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:hint="@string/rrn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gegevens_vader"
                />

            <EditText
                android:id="@+id/naam_vader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:hint="@string/lastname"/>

            <EditText
                android:id="@+id/voornaam_vader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:hint="@string/firstname"/>

            <EditText
                android:id="@+id/rrn_vader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeActionLabel="@string/next"
                android:singleLine="true"
                android:hint="@string/rrn"/>

            <Button
                android:id="@+id/sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="4dp"
                android:text="@string/registreren"
                android:enabled="false"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
