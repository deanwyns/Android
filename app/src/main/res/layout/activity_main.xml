<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_background"
    android:orientation="vertical">

    <!--<include-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--layout="@layout/toolbar"-->
        <!--android:layout_gravity="center_horizontal" />-->

    <LinearLayout
        android:id="@+id/newsfeed_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10px"
        android:background="@drawable/news_rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="10px"
            android:text="@string/newsfeed" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10px"
                android:text="@string/nieuwsoverzicht" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/camp_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/vacation" />

        <ImageButton
            android:id="@+id/photo_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/photo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/registrations_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/files" />

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

    </LinearLayout>
</LinearLayout>