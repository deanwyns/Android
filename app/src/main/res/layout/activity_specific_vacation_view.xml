<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hogent.hogentprojecteniii_groep10.SpecificVacationView">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specific_vacation_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/joetz"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placeholder Title"
        android:id="@+id/specific_vacation_title"
        android:layout_alignBottom="@+id/specific_vacation_image"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:typeface="serif"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/description"
        android:id="@+id/specific_vacation_description_title"
        android:layout_below="@+id/specific_vacation_image"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder description text"
        android:id="@+id/specific_vacation_description_text"
        android:layout_below="@+id/specific_vacation_description_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/price"
        android:id="@+id/specific_vacation_price_title"
        android:layout_below="@+id/specific_vacation_description_text"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placeholder price text"
        android:id="@+id/specific_vacation_price_text"
        android:layout_below="@+id/specific_vacation_price_title"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inschrijven"
        android:id="@+id/specific_vacation_signup_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inschrijven"/>
</RelativeLayout>
